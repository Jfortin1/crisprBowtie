Package: crisprBowtie
Version: 1.1.33
Date: 2021-08-06
Title: Bowtie-based alignment of CRISPR gRNA spacer sequences
Authors@R: c(
    person("Jean-Philippe", "Fortin", email = "fortin946@gmail.com", role = c("aut", "cre")))
Depends:
    methods
Imports:
    Biostrings (>= 2.61.1),
    BSgenome (>= 1.61.0),
    crisprBase,
    IRanges (>= 2.27.0),
    GenomicRanges (>= 1.45.0),
